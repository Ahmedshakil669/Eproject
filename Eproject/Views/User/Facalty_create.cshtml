@model Eproject.Models.Facalty

@{
    ViewData["Title"] = "Add Faculty";
    Layout = "~/Views/Shared/headfoot.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Add New Faculty</h2>

    <form asp-action="Facalty_create" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="FacultyCode" class="form-label">Faculty Code</label>
                <input asp-for="FacultyCode" class="form-control" />
                <span asp-validation-for="FacultyCode" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="BatchCode" class="form-label">Batch Code</label>
                <input asp-for="BatchCode" class="form-control" />
                <span asp-validation-for="BatchCode" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="BatchTiming" class="form-label">Batch Timing</label>
                <input asp-for="BatchTiming" type="time" class="form-control" />
                <span asp-validation-for="BatchTiming" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Qualification" class="form-label">Qualification</label>
            <select asp-for="Qualification" class="form-control">
                <option value="">Select Qualification</option>
                <option value="Intermediate">Intermediate</option>
                <option value="Graduation">Graduation</option>
                <option value="Bachelors">Bachelors</option>
            </select>
            <span asp-validation-for="Qualification" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Add Faculty</button>
        <a asp-action="Facalty" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}